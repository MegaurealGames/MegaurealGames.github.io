@page "/create_account"
@rendermode InteractiveServer

<PageTitle>Create account</PageTitle>

<h1>Create account</h1>

<br>
<label for="name">Name</label><input type="text" id="name" @bind="name"><br>
<label for="email">Email</label><input type="email" id="email" @bind="email"><br>
<label for="'pass'">Password</label><input type="password" id="pass" @bind="password"><br>
<button @onclick="OnClick">Enviar</button>



@code {
    private string? name;
    private string? email;
    private bool descargado;
    private string? password;
    private void OnClick(MouseEventArgs e)
    {
        //Layout.MainLayout.logIn(name, email, password);
        Data.Person add=new Data.Person(name, email, password);
        Data.persons.Add(add);
        
        name="";
        email="";
        password="";
        descargado=false;
    }
}
